# Arquivo de configuração para Docker
# Copie este arquivo para .env antes de executar docker-compose

# Configurações do banco de dados
DATABASE_URL=postgresql://sarai_user:sarai_password@postgres:5432/sarai_db

# Configurações da aplicação
NODE_ENV=production
PORT=5000

# Chave secreta para sessões (MUDE ESTA CHAVE EM PRODUÇÃO!)
SESSION_SECRET=sua-chave-secreta-super-segura-aqui-mude-em-producao

# Configurações de email SendGrid (opcional)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@sarai.com.br

# Domínio da aplicação
DOMAIN=localhost:5000

# Senha do Redis (opcional)
REDIS_PASSWORD=redis_password

# Configurações de desenvolvimento/debug
DEBUG=false
LOG_LEVEL=info